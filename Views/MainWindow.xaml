<Window x:Class="ExampleMvvmPattern.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleMvvmPattern"
        xmlns:vm="clr-namespace:ExampleMvvmPattern.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Filter text" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" FontSize="15" Margin="5"/>

        </Grid>
        
        
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Add" Command="{Binding AddPersonCommand}" Width="80" Margin="5"/>
            <Button Content="Edit" Command="{Binding EditPersonCommand}" Width="80" Margin="5"/>
            <Button Content="Remove" Command="{Binding RemovePersonCommand}" Width="80" Margin="5"/>
        </StackPanel>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <StackPanel  Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Load From File" Command="{Binding LoadFromFileCommand}" Width="90" Margin="5"/>
                <Button Content="Save To File" Command="{Binding SaveToJsonCommand}" Width="90" Margin="5"/>
            </StackPanel>
        </Border>

        <DataGrid ItemsSource="{Binding PersonContacts, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedPersonC, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Grid.Row="1"
                  Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
